<% require 'uri' %>

root /app/.output/public;

autoindex off;
port_in_redirect off;
expires off;

include mime.types;
types {
  application/manifest+json  webmanifest;
}
try_files $uri $uri/ /index.html =404;

location ~ ^/.well-known/apple-app-site-association|/.well-known/assetlinks.json$ {
    try_files $uri $uri/ =404;
}

location / {
  if ($host != '<%= URI.parse(ENV['DOMAIN_NAME']).host %>') {
     location ~ .* {
           <%= ENV['NGINX_ACCESS_RULES'] %>
           error_page 403 = @redirect_to_agora;
        }
  }

  error_page 404 =200 /;
  try_files $uri $uri/ /index.html =404;
}

error_page 403 = @redirect_to_agora;

location @redirect_to_agora {
    rewrite ^ <%= ENV['DOMAIN_NAME'] %>$request_uri? permanent;
}
